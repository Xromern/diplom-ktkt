
{% extends 'base-journal.html.twig' %}

{% block title %}{% endblock %}


{% block body %}

    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <style>
        .embedded-daterangepicker .daterangepicker::before,
        .embedded-daterangepicker .daterangepicker::after {
            display: none;
        }
        .embedded-daterangepicker .daterangepicker {
            position: relative !important;
            top: auto !important;
            left: 0 !important;
            float: left;
            width: 100%;
        }
        .embedded-daterangepicker .daterangepicker .drp-calendar {
            width: 50%;
            max-width: 50%;
        }
        .container{
            position: relative;
            width: auto;
        }
        .daterangepicker{
            width: 850px !important;

        }
        .drp-calendar{
            width: 50% !important;

        }
        .container-daterangepicke{
            width: 520px;

        }
        .daterangepicker td.active, .daterangepicker td.active:hover {
            background-color: #163C94 !important;
        }
    </style>
    <div class="container-journal-center container-daterangepicker">
        <div class="row">
            <div class="container">
                <p id="daterangepicker-result">Вибрано діапазон дат: </p>
                <input id="daterangepicker1" type="hidden">
                <div id="daterangepicker1-container" class="embedded-daterangepicker"></div>
            </div>
        </div>
    </div>
    <script>
        $(function() {

            var picker = $('#daterangepicker1').daterangepicker({
                "parentEl": "#daterangepicker1-container",
                "autoApply": true,
                "locale": {
                    "format": "YYYY-MM-DD",
                    "separator": " - ",
                    "applyLabel": "Зберегти",
                    "cancelLabel": "Відмінит",
                    "fromLabel": "Від",
                    "toLabel": "До",
                    "customRangeLabel": "Свій",
                    "daysOfWeek": [
                        "Вс",
                        "Пн",
                        "Вт",
                        "Ср",
                        "Чт",
                        "Пт",
                        "Сб"
                    ],
                    "monthNames": [
                        "Січень",
                        "Лютий",
                        "Березень",
                        "Квітень",
                        "Травень",
                        "Червень",
                        "Липень",
                        "Серпень",
                        "Вересень",
                        "Жовтень",
                        "Листопад",
                        "Грудень"
                    ],
                    "firstDay": 1
                },
                "minDate": "{{ rangeDate[0].dateMin }}",
                "maxDate": "{{ rangeDate[0].dateMax }}",
                "startDate ":"{{ rangeDate[0].dateMin }}",
                "endDate":"{{ rangeDate[0].dateMax }}",
            });

            picker.on('apply.daterangepicker', function(ev, picker) {
                $("#daterangepicker-result").html('Вибрано діапазон дат: ' + picker.startDate.format('YYYY-MM-DD') + ' до ' + picker.endDate.format('YYYY-MM-DD'));

            });

            picker.data('daterangepicker').hide = function () {};

            picker.data('daterangepicker').show();


        });
    </script>

{% endblock %}